<div class="contenedor-nav">
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <img src="/images/logo/logo.svg" alt="logo" width="50" height="34" class="d-inline-block align-text-top" />
            <a class="navbar-brand" href="/admin/userHome">
                Home
            </a>
            <a class="navbar-brand" href="/admin/novedades">
                Novedades
            </a>
            <a class="navbar-brand" href="/admin/usuarios">
                Usuarios
            </a>
        </div>
    </nav>
</div>

<div class="contenedor">
    <div class="row">
        <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight"
            aria-controls="offcanvasRight"> <i class="fa-regular fa-user"></i> Usuario: {{nombreusuario}}</button>
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
            <div class="offcanvas-header">
                <h5 id="offcanvasRightLabel">
                    <i class="fa-regular fa-user"></i>
                    {{nombre}},
                    {{apellido}}
                </h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" id="salir"
                    aria-label="Close"></button>
            </div>
            <div class="recuadro">
                <img src="/images/imagen-perfil.png" alt="perfil" class="imagen-perfil" />
            </div>
            <div class="mail">
                <h6><i class="fa-regular fa-envelope"></i> E-mail: {{mail}}</h6>
            </div>
            <div class="offcanvas-body">
                <a class="btn btn-danger" href="/admin/login/logout">
                    <i class="fa-solid fa-arrow-right-from-bracket"></i></a>
            </div>
        </div>
        <a class="btn btn-danger" href="/admin/login/logout">
            <i class="fa-solid fa-arrow-right-from-bracket"></i></a>
    </div>
</div>

